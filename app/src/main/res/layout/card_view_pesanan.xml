<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/cd_pesanan"
                                    android:layout_margin="5dp"
                                    app:cardElevation="5dp"
                                    app:cardCornerRadius="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:padding="10dp">
        <TextView android:id="@+id/tv_id_pesanan" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="ID Pesanan" android:textStyle="bold" android:textSize="24sp"/>
        <TextView android:id="@+id/tv_tanggal_masuk" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Tanggal masuk" android:layout_below="@+id/tv_id_pesanan"/>
        <TextView android:layout_marginTop="10dp" android:id="@+id/tv_toko" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Cabang" android:layout_below="@+id/tv_tanggal_masuk" android:textSize="18sp"/>
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_alignParentEnd="true"
                android:id="@+id/status_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:civ_fill_color="#3399ff"
        />
    </RelativeLayout>

</android.support.v7.widget.CardView>