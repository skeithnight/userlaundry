<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_page"
        android:orientation="vertical"
        tools:context=".activities.ListDataActivity">
    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="wrap_content" android:elevation="5dp">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:padding="10dp">
            <TextView android:id="@+id/tv_nama_layanan" android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Paket Cuci + Setrika" android:textStyle="bold" android:textSize="24sp"/>
            <TextView android:id="@+id/tv_harga" android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Rp. 10.000 / kilo" android:layout_below="@+id/tv_nama_layanan"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView android:id="@+id/cd_list_toko" android:layout_marginTop="5dp" android:layout_width="match_parent"
                                        android:layout_height="wrap_content" android:elevation="5dp">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:padding="10dp">
            <TextView android:id="@+id/tv_nama_toko" android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Oxy Laundry Arcamanik" android:textStyle="bold" android:textSize="24sp"/>
            <TextView android:id="@+id/tv_alamat" android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Jl. Arcamanik no. 11" android:layout_below="@+id/tv_nama_toko"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>